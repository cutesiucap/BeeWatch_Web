                        <div class="card-footer">
                            <input type="button" onclick="datdon()" class="btn btn-warning float-right" value="Đặt Đơn" style="width: 200px;">
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>
        </div>
    </div>
</section>

