            title: Content,
        });
    };
</script>
<script>
    $(function () {
        $(window).scroll(function () {
            if ($(this).scrollTop() > 100) $(".lentop").fadeIn();
            else $(".lentop").fadeOut();
        });
        $(".lentop").click(function () {
            $("body,html").animate({ scrollTop: 0 }, "slow");
        });
    });
</script>

<script>
    function CheckCODE(sefl) {
        var data = {
            CODE: sefl.value,
            id_Order: sefl.parentElement.parentElement.parentElement.parentElement.parentElement.parentElement.id,
        };
        $(sefl.parentElement.parentElement.children[1].children[0]).html(data.CODE);
    };

    $('._discountCode').change(function () {
        CheckCODE(this);
    })

    function Sodon() {
        var sl = document.getElementsByClassName('_TenShop').length;
        $('#_Soluongdon').html(sl);
    }

    function Thanhtoan() {
        var l = document.getElementsByClassName('_tonggiatri');
        var sl = 0;
        $.each(l, function (index, item) {
            sl += parseInt($(item).text());
        });
        $('#_thanhtoan').html(sl);
    }

    window.onload = function () {
        Sodon();
        Thanhtoan();
    };

    function datdon() {
        var result = confirm("Xác nhận đặt Đơn ?");
        if (result) {
            ThanhCongToast("Đặt đơn Thành công");
        }
    }
</script>