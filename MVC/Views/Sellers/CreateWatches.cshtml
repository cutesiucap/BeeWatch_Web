<script>
    document.getElementById('_dongho').className += ' active';

    function create(sefl) {
        var data = {
            id_Firms: $('#id_Firms option:selected').val(),
            list_Categories: $('#list_Categories').val().toString(),
            Name: $('#Name').val(),
            id_Sex: $('input[type="radio"]:checked').val(),
            Price: $('#Price').val(),
            Count: $('#Count').val(),
            Cod: $('#Code').val(),
            Information: $('#Information').val()
        };
        $.ajax({
            url: '../../Sellers/CreateWatches',
            type: 'POST',
            async: false,
            data: data,
            beforeSend: function () {
                (sefl).disabled = true;
            },
            success: function (reques) {
                (sefl).disabled = false;
                stepper.next();
            },
            fail: function (reques) {

            }
        });
    }

</script>
